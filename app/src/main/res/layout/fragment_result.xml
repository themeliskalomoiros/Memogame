<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Briefing_Parent_Style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/Briefing_Title_Style"
            tools:text="You did bad" />

        <View style="@style/Briefing_Divider_Style" />

        <TextView
            android:id="@id/message"
            style="@style/Briefing_Message_Style"
            tools:text="Congratulations, you've done well! You passed 21 out of 26 games. Try again next time!" />


        <TextView
            android:id="@+id/details"
            style="@style/Briefing_Message_Style"
            android:textColor="@color/primaryTextColor"
            tools:text="3 easy games x 100 +\n2 medium games x 150 +\n1 hard game x 200" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/score_label"
                android:text="@string/total_score"
                android:padding="0dp"
                style="@style/Briefing_Message_Style" />

            <TextView
                android:id="@+id/score"
                style="@style/Briefing_Message_Style"
                android:padding="0dp"
                tools:text="22000 points" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:src="@drawable/restart_black"
            style="@style/Briefing_Fab_Style" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>