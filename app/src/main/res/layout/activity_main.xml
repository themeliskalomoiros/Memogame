<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor100"
    tools:context=".controller.menu.MainActivity">

    <TextView
        android:id="@+id/title"
        style="@style/Title_Style"
        android:textColor="@color/secondaryColor"
        android:background="@color/primaryColor"
        android:text="@string/app_name" />

    <FrameLayout
        android:id="@+id/fragment_container"
        style="@style/Center_Fragment_Style"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/Progress_Bar_Style"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <FrameLayout
        android:id="@+id/linearLayout"
        style="@style/Bottom_Bar">


    <!-- TODO: Remove the players name feature -->
        <TextView
            android:id="@+id/player_name"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/molly_jack"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/player_name"
            android:textStyle="italic"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>