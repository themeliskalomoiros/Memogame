<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".controller.MainActivity">

    <TextView
        android:id="@+id/player_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/molly_jack"
        android:textColor="@color/secondaryTextColor"
        android:textStyle="italic"
        android:visibility="visible"
        android:textSize="20sp"
        tools:text="George Sponge"
        app:layout_constraintBottom_toTopOf="@+id/play2"
        app:layout_constraintEnd_toEndOf="@+id/play5"
        app:layout_constraintStart_toStartOf="@+id/hot_round"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/molly_jack"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/practise"
        style="@style/Box_Style"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_videogame_pink"
        app:layout_constraintEnd_toStartOf="@+id/play7"
        app:layout_constraintStart_toEndOf="@+id/play6"
        app:layout_constraintTop_toBottomOf="@+id/play2" />

    <ImageButton
        android:id="@+id/play6"
        style="@style/Box_Style_Disabled"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_keyboard_arrow_down_light_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hot_round" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/primaryDarkColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:background="@color/primaryDarkColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play11"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/play3"
        style="@style/Box_Style_Disabled"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_chevron_right_light_green"
        app:layout_constraintEnd_toStartOf="@+id/sign_in"
        app:layout_constraintStart_toEndOf="@+id/play9"
        app:layout_constraintTop_toBottomOf="@+id/practise" />

    <ImageButton
        android:id="@+id/play9"
        style="@style/Box_Style_Disabled"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_chevron_right_light_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play6" />

    <ImageButton
        android:id="@+id/play10"
        style="@style/Box_Style_Disabled"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_chevron_right_light_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play9" />

    <ImageButton
        android:id="@+id/play11"
        style="@style/Box_Style_Disabled"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_chevron_right_light_green"
        app:layout_constraintEnd_toStartOf="@+id/sign_in"
        app:layout_constraintStart_toEndOf="@+id/play10"
        app:layout_constraintTop_toBottomOf="@+id/play3" />

    <ImageButton
        android:id="@+id/sign_in"
        style="@style/Box_Style"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/google_48px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play7" />

    <ImageButton
        android:id="@+id/play5"
        style="@style/Box_Style_Disabled"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/ic_keyboard_arrow_down_light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <ImageButton
        android:id="@+id/hot_round"
        style="@style/Box_Style"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/lightning_bolt_48px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <ImageButton
        android:id="@+id/play2"
        style="@style/Box_Style_Disabled"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_chevron_right_light_green"
        app:layout_constraintEnd_toStartOf="@+id/play5"
        app:layout_constraintStart_toEndOf="@+id/hot_round"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <ImageButton
        android:id="@+id/play8"
        style="@style/Box_Style_Disabled"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/ic_keyboard_arrow_up_light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in" />

    <ImageButton
        android:id="@+id/play7"
        style="@style/Box_Style_Disabled"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/ic_keyboard_arrow_left_light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play5" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="@dimen/loading_indicator"
        android:layout_height="@dimen/loading_indicator"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/practise"
        app:layout_constraintEnd_toEndOf="@+id/practise"
        app:layout_constraintStart_toStartOf="@+id/practise"
        app:layout_constraintTop_toTopOf="@+id/practise" />

</androidx.constraintlayout.widget.ConstraintLayout>