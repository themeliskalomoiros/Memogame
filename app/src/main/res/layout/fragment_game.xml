<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/symbol_0"
            style="@style/Symbol_Style" />

        <Button
            android:id="@+id/symbol_1"
            style="@style/Symbol_Style" />

        <Button
            android:id="@+id/symbol_2"
            style="@style/Symbol_Style" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/symbol_3"
            style="@style/Symbol_Style"
             />

        <Button
            android:id="@+id/symbol_4"
            style="@style/Symbol_Style"
             />

        <Button
            android:id="@+id/symbol_5"
            style="@style/Symbol_Style"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/symbol_7"
            style="@style/Symbol_Style" />

        <Button
            android:id="@+id/symbol_6"
            style="@style/Symbol_Style" />

        <Button
            android:id="@+id/symbol_8"
            style="@style/Symbol_Style" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/symbol_9"
            style="@style/Symbol_Style" />

        <Button
            android:id="@+id/symbol_10"
            style="@style/Symbol_Style"/>

        <Button
            android:id="@+id/symbol_11"
            style="@style/Symbol_Style" />

    </LinearLayout>

</LinearLayout>


