<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_an_option"
        android:textSize="@dimen/subtitle"
        android:fontFamily="@font/molly_jack"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:layout_marginBottom="8sp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/symbol_0"
            style="@style/Symbol_Style.Disabled" />

        <ImageButton
            android:id="@+id/leaderboard"
            style="@style/Symbol_Style"
            android:src="@drawable/leaderboard_pink"/>

        <ImageButton
            android:id="@+id/symbol_2"
            style="@style/Symbol_Style.Disabled" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/random"
            style="@style/Symbol_Style"
            android:src="@drawable/heart_with_pulse_pink"/>

        <ImageButton
            android:id="@+id/practise"
            style="@style/Symbol_Style"
            android:src="@drawable/joystick_pink"/>

        <ImageButton
            android:id="@+id/lightning_round"
            style="@style/Symbol_Style"
            android:src="@drawable/stopwatch_pink"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/symbol_7"
            style="@style/Symbol_Style.Disabled" />

        <ImageButton
            android:id="@+id/user"
            style="@style/Symbol_Style"
            android:src="@drawable/user_pink"/>

        <ImageButton
            android:id="@+id/symbol_8"
            style="@style/Symbol_Style.Disabled" />

    </LinearLayout>

</LinearLayout>


