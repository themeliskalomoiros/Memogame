<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:text="@string/basic_points"
        android:textSize="@dimen/item_score_player_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_default_margin"
        android:layout_marginLeft="@dimen/double_default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:text="@string/survival_mode"
        android:textSize="@dimen/secondary_item_score_text"
        app:layout_constraintEnd_toStartOf="@+id/survival_highscore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/survival_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/double_default_margin"
        android:layout_marginRight="@dimen/double_default_margin"
        android:textSize="@dimen/secondary_item_score_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:text="20.000" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_default_margin"
        android:layout_marginLeft="@dimen/double_default_margin"
        android:layout_marginTop="@dimen/half_default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:text="@string/time_mode"
        android:textSize="@dimen/secondary_item_score_text"
        app:layout_constraintEnd_toStartOf="@+id/time_highscore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/time_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_default_margin"
        android:layout_marginEnd="@dimen/double_default_margin"
        android:layout_marginRight="@dimen/double_default_margin"
        android:textSize="@dimen/secondary_item_score_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/survival_highscore"
        tools:text="20.000" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_default_margin"
        android:layout_marginLeft="@dimen/double_default_margin"
        android:layout_marginTop="@dimen/half_default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:text="@string/average"
        android:textSize="@dimen/item_score_text"
        app:layout_constraintEnd_toStartOf="@+id/average_highscore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/average_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_default_margin"
        android:layout_marginEnd="@dimen/double_default_margin"
        android:layout_marginRight="@dimen/double_default_margin"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/item_score_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_highscore"
        tools:text="20.000" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/double_default_margin"
        android:text="@string/bonus_points_label"
        android:textSize="@dimen/item_score_player_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_default_margin"
        android:layout_marginLeft="@dimen/double_default_margin"
        android:layout_marginTop="@dimen/half_default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:text="@string/games_completed"
        android:textSize="@dimen/item_score_text"
        app:layout_constraintEnd_toStartOf="@+id/games_completed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


    <TextView
        android:id="@+id/games_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/half_default_margin"
        android:layout_marginEnd="@dimen/double_default_margin"
        android:layout_marginRight="@dimen/double_default_margin"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/item_score_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/badges"
        tools:text="500" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_default_margin"
        android:layout_marginLeft="@dimen/double_default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:text="@string/accuracy"
        android:textSize="@dimen/item_score_text"
        app:layout_constraintEnd_toStartOf="@+id/accuracy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <TextView
        android:id="@+id/accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/double_default_margin"
        android:layout_marginRight="@dimen/double_default_margin"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/item_score_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:text="300" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_default_margin"
        android:layout_marginLeft="@dimen/double_default_margin"
        android:layout_marginTop="@dimen/half_default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:text="@string/badges"
        android:textSize="@dimen/item_score_text"
        app:layout_constraintEnd_toStartOf="@+id/badges"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


    <TextView
        android:id="@+id/badges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/half_default_margin"
        android:layout_marginEnd="@dimen/double_default_margin"
        android:layout_marginRight="@dimen/double_default_margin"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/item_score_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accuracy"
        tools:text="150" />"

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/double_default_margin"
        android:text="@string/total"
        android:textSize="@dimen/item_score_player_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/total_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/double_default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/item_score_player_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:text="25.000" />

</androidx.constraintlayout.widget.ConstraintLayout>