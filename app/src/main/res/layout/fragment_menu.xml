<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/default_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/subtitle"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/default_margin"
        android:text="@string/options"
        android:textColor="@color/primaryColor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/random"
        style="@style/MainMenu_Item_Style"
        android:text="@string/survival_mode"
        app:icon="@drawable/smiling_face_with_heart" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lightning_round"
        style="@style/MainMenu_Item_Style"
        android:text="@string/time_mode"
        app:icon="@drawable/stopwatch_pink" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/practise"
        style="@style/MainMenu_Item_Style"
        android:text="@string/practise_mode"
        app:icon="@drawable/joystick_pink" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/leaderboard"
        style="@style/MainMenu_Item_Style"
        android:text="@string/leaderboard"
        app:icon="@drawable/leaderboard_pink" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/user"
        style="@style/MainMenu_Item_Style"
        android:text="@string/sign_in"
        app:icon="@drawable/google" />
</LinearLayout>


