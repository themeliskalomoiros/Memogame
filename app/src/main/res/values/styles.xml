<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <style name="Symbol_Style">
        <item name="android:layout_width">@dimen/box</item>
        <item name="android:layout_height">@dimen/box</item>
        <item name="android:textSize">@dimen/symbol_char</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <!--        <item name="android:soundEffectsEnabled">false</item>-->
    </style>

    <style name="Symbol_Style.Disabled" parent="Symbol_Style">
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Title_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/double_default_margin</item>
        <item name="android:paddingBottom">@dimen/double_default_margin</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="fontFamily">@font/molly_jack</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="Center_Fragment_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="Progress_Bar_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MainMenu_Item_Style">
        <item name="android:layout_width">@dimen/menu_item_label_width</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>
        <item name="android:textSize">@dimen/menu_item_label</item>
        <item name="android:drawablePadding">@dimen/menu_item_label_drawable_padding</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:padding">@dimen/menu_item_label_padding</item>
        <item name="android:layout_margin">@dimen/menu_item_label_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Bottom_Bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/bottom_bar_height</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:gravity">center</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="Game_Navigation_Button_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Game_Difficulty_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:fontFamily">@font/molly_jack</item>
        <item name="android:textSize">@dimen/game_difficulty_text</item>
    </style>

    <style name="Briefing_Parent_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/briefing_parent_margin</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="Briefing_Title_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:fontFamily">@font/molly_jack</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/subtitle</item>
    </style>

    <style name="Briefing_Message_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/briefing_divider_margin</item>
        <item name="android:layout_marginLeft">@dimen/briefing_divider_margin</item>
        <item name="android:layout_marginEnd">@dimen/briefing_divider_margin</item>
        <item name="android:layout_marginRight">@dimen/briefing_divider_margin</item>
        <item name="android:padding">@dimen/half_default_margin</item>
        <item name="android:textSize">@dimen/briefing_message_text</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Briefing_Divider_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/half_default_margin</item>
        <item name="android:layout_marginStart">@dimen/briefing_divider_margin</item>
        <item name="android:layout_marginLeft">@dimen/briefing_divider_margin</item>
        <item name="android:layout_marginEnd">@dimen/briefing_divider_margin</item>
        <item name="android:layout_marginRight">@dimen/briefing_divider_margin</item>
        <item name="android:background">@color/primaryColor100</item>
    </style>

    <style name="Briefing_Fab_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="fabSize">mini</item>
    </style>
</resources>
