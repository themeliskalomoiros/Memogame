<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="Box_Style">
        <item name="android:layout_width">@dimen/box</item>
        <item name="android:layout_height">@dimen/box</item>
    </style>

    <style name="Box_Style_Disabled" parent="Box_Style">
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Symbol_Style" parent="Box_Style">
        <item name="android:textSize">@dimen/symbol_char</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:layout_margin">10dp</item>
<!--        <item name="android:soundEffectsEnabled">false</item>-->
    </style>

    <style name="Symbol_Style.Disabled" parent="Symbol_Style">
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:src">@drawable/ic_chevron_right_light_green</item>
    </style>

    <style name="Title_Style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="fontFamily">@font/molly_jack</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Bottom_Line_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/bottom_line_height</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@color/primaryDarkColor</item>
    </style>

    <style name="Top_Line_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/top_line_height</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:layout_marginRight">64dp</item>
        <item name="android:background">@color/primaryDarkColor</item>
    </style>

    <style name="MainMenu_Item_Style">
        <item name="android:layout_width">@dimen/menu_item_label_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/menu_item_label</item>
        <item name="android:drawablePadding">@dimen/menu_item_label_drawable_padding</item>
        <item name="android:layout_margin">@dimen/menu_item_label_margin</item>
        <item name="android:padding">@dimen/menu_item_label_margin</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
    </style>

</resources>
